<html>
<head>
  <title>Standup Configuration</title>
  <style>
    body {
      background-color: #6096bd;
      font-family: sans-serif;
      color: #666666;
    }
    div.container {
      background-color: #e9e9e9;
      margin: auto;
      padding: 15px 30px;
      width: 90%;
    }
    h1 {
      text-align: center;
    }
    form {
      width: 80%;
      margin: 0 auto;
    }
    input {
      display: inline;
      margin: 0 5px 10px 0;
    }
    label {
      display: block;
      border-bottom: 1px solid #CCC;
      margin-top: 5px;
    }
    label:last-of-type {
      border-bottom: none;
    }

    input[type=submit], .logout {
      width: 100%;
      border: 0;
      padding: 10px 0;
      background-color: #6096bd;
      color: white;
      display: block;
      margin-bottom: 15px;
      margin-top: 15px;
      font-weight: 900;
      text-transform: uppercase;
      font-size: 16px;
      text-decoration: none;
      text-align: center;
    }
    .logout {
      background-color: #c72543;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Select Projects</h1>

    <form id="signinForm" method="POST" action="/config">
      <input name="api_token" type="hidden" value="<%= api_token %>" />
      <input name="initials" type="hidden" value="<%= initials %>" />
      <% projects.each do |project| %>
        <label>
          <input name="project_ids[]" value="<%= project[:id] %>" type="checkbox" /><%= project[:name] %>
        </label>
      <% end %>
      <input type='submit'/>
      <a class='logout' href="/logout">Log Out</a>
    </form>
  </div>
</body>
</html>

